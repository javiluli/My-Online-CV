header.main-header
  nav.main-header__menu
    div
      a(href="https://github.com/javiluli/my-online-cv", target="_blank", title="github.com/javiluli/my-online-cv")
        img(src="./static/content/svg/cv-logo.svg", alt="cv-logo").cv-logo
    .main-end#main-end
      .main-menu-toggle#main_menu_toggle
        span.span-menu-toggle#span_menu_toggle
    nav.main-menu#main_menu
      ul.list-main-menu
        .colum-list
          li.main_menu__item: a(href="https://javiluli.github.io/icons4all/", target="_blank", key="menu__item_link_3").main_menu__item-link.text-menu Iconos SVG
          li.main_menu__item: a(href="https://javiluli.github.io/hover-animations-btn/", target="_blank", key="menu__item_link_1").main_menu__item-link.text-menu Botones
          li.main_menu__item: a(href="https://github.com/javiluli/my-online-cv", target="_blank", key="menu__item_link_5").main_menu__item-link.text-menu GitHub

        .colum-list

          li.main_menu__item.settings
            ul.list-settings#list_settings
              li.item-settings
                p(key="text_settings_2").text-settings.text-menu Tema oscuro
                label.main-end_label(for='switch')
                  input#switch.inpt-switch-theme(type='checkbox', name='theme')
                  
              li.item-settings
                p(key="text_settings_3").text-settings.text-menu Cambiar idioma
                .change-languaje#change-languaje
                  .labels_menu_translate
                    img(src="./static/content/svg/worldwide.svg", alt="cv-logo").img-languaje_world.m-bottom
                    label(for="es").label__translate
                      input#es(type="radio", name="translate", checked).btn-translate
                      img(src="./static/content/svg/spain.svg", alt="cv-logo").img-languaje.m-bottom
                    label(for="en").label__translate
                      input#en(type="radio", name="translate").btn-translate
                      img(src="./static/content/svg/english.svg", alt="cv-logo").img-languaje.m-bottom
                    label(for="fr").label__translate
                      input#fr(type="radio", name="translate").btn-translate
                      img(src="./static/content/svg/france.svg", alt="cv-logo").img-languaje.m-bottom
                    .tooltip_information.m-bottom
                      img#info_icon(src="./static/content/svg/information.svg", alt="i").img-languaje_information
