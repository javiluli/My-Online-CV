    //- Progress bar JQuery
    script.
      $(window).scroll(function() {
        var scroll = $(window).scrollTop(),
          dh = $(document).height(),
          wh = $(window).height();
        value = (scroll / (dh - wh)) * 100;
        $("#progress_bar").css("width", value + "%");
      });